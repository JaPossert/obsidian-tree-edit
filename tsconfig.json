{
  "compilerOptions": {
    "incremental": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "target": "es2021",
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": ["DOM", "DOM.Iterable", "esnext", "es6", "scripthost", "es2018"],
    "allowJs": true,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/*.ts"]
}
