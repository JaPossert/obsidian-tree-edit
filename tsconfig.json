{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "target": "esnext",
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": ["DOM", "DOM.Iterable", "esnext", "es6", "scripthost", "es2018" ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true
  },
  "include": [ "src/*.ts" ]
}
